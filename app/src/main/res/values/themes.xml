<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cafe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryContainer">@color/secondaryLightColor</item>
        <item name="colorOnPrimaryContainer">@color/colorOnLightSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorSecondaryContainer">@color/primaryLightColor</item>
        <item name="colorOnSecondaryContainer">@color/colorOnPrimaryLight</item>
        <!-- Inverse color. -->
        <item name="colorSurfaceInverse">?colorPrimaryDark</item>
        <item name="colorOnSurfaceInverse">?colorOnPrimary</item>
        <item name="colorPrimaryInverse">?colorSecondary</item>
        <!-- Neutral color. -->
        <item name="colorSurface">@color/secondaryLightColor2</item>
        <item name="colorSurfaceVariant">@color/secondaryLightColor2</item>
        <item name="colorOnSurfaceVariant">?colorPrimaryDark</item>
        <item name="colorOutline">?colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--        Material 3  -->
        <item name="colorOnBackground">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/samimbold</item>
        <item name="android:fontFamily">@font/samimbold</item>
        <item name="android:colorBackground">@color/themeBackground</item>
        <item name="android:textColor">@color/colorOnLightSecondary</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="WideTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ripple_back</item>
        <item name="android:drawablePadding">4dp</item>
    </style>


    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>