<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="io.github.yamin8000.cafe.base.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_newOrderFragment"
            app:destination="@id/newOrderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchOrdersFragment"
            app:destination="@id/searchOrdersFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/product_graph" />
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/category_graph" />
        <action
            android:id="@+id/action_homeFragment_to_subscriber_graph"
            app:destination="@id/subscriber_graph" />
        <action
            android:id="@+id/action_homeFragment_to_accountLoginModal"
            app:destination="@id/accountLoginModal" />
        <action
            android:id="@+id/action_homeFragment_to_account_graph"
            app:destination="@id/account_graph" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="io.github.yamin8000.cafe.base.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/newOrderFragment"
        android:name="io.github.yamin8000.cafe.neworder.NewOrderFragment"
        android:label="NewOrderFragment"
        tools:layout="@layout/fragment_new_order">
        <action
            android:id="@+id/action_newOrderFragment_to_searchOrdersFragment"
            app:destination="@id/searchOrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchOrdersFragment"
        android:name="io.github.yamin8000.cafe.searchorder.SearchOrdersFragment"
        android:label="SearchOrdersFragment"
        tools:layout="@layout/fragment_search_orders" />
    <dialog
        android:id="@+id/iconPickerModal"
        android:name="io.github.yamin8000.cafe.ui.iconpicker.IconPickerModal"
        android:label="IconPickerModal"
        tools:layout="@layout/icon_picker_modal" />
    <navigation
        android:id="@+id/category_graph"
        app:startDestination="@id/categoryFragment">
        <fragment
            android:id="@+id/categoryFragment"
            android:name="io.github.yamin8000.cafe.category.CategoryFragment"
            android:label="CategoryFragment"
            tools:layout="@layout/fragment_crud">
            <action
                android:id="@+id/action_categoryFragment_to_newCategoryFragment"
                app:destination="@id/newCategoryFragment" />
        </fragment>
        <fragment
            android:id="@+id/newCategoryFragment"
            android:name="io.github.yamin8000.cafe.category.NewCategoryFragment"
            android:label="NewCategoryFragment"
            tools:layout="@layout/fragment_new_category">
            <action
                android:id="@+id/action_newCategoryFragment_to_iconPickerModal"
                app:destination="@id/iconPickerModal" />
            <argument
                android:name="IS_EDIT_MODE"
                app:argType="boolean" />
            <argument
                android:name="data"
                app:argType="io.github.yamin8000.cafe.db.entities.category.Category" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/product_graph"
        app:startDestination="@id/productFragment">
        <fragment
            android:id="@+id/newProductFragment"
            android:name="io.github.yamin8000.cafe.product.NewProductFragment"
            android:label="NewProductFragment"
            tools:layout="@layout/fragment_new_product">
            <argument
                android:name="is_edit_mode"
                app:argType="boolean" />
            <action
                android:id="@+id/action_newProductFragment_to_iconPickerModal"
                app:destination="@id/iconPickerModal" />
            <argument
                android:name="data"
                app:argType="io.github.yamin8000.cafe.db.entities.relatives.ProductAndCategory" />
        </fragment>
        <fragment
            android:id="@+id/productFragment"
            android:name="io.github.yamin8000.cafe.product.ProductsFragment"
            android:label="ProductFragment"
            tools:layout="@layout/fragment_crud">
            <action
                android:id="@+id/action_productFragment_to_newProductFragment"
                app:destination="@id/newProductFragment" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/subscriber_graph"
        app:startDestination="@id/subscriberFragment">
        <fragment
            android:id="@+id/newSubscriberFragment"
            android:name="io.github.yamin8000.cafe.subscriber.NewSubscriberFragment"
            android:label="NewSubscriberFragment"
            tools:layout="@layout/fragment_new_subscriber" />
        <fragment
            android:id="@+id/subscriberFragment"
            android:name="io.github.yamin8000.cafe.subscriber.SubscriberFragment"
            android:label="SubscriberFragment"
            tools:layout="@layout/fragment_crud" />
    </navigation>
    <dialog
        android:id="@+id/accountLoginModal"
        android:name="io.github.yamin8000.cafe.account.AccountLoginModal"
        android:label="AccountLoginModal"
        tools:layout="@layout/account_login" />
    <dialog
        android:id="@+id/promptModal"
        android:name="io.github.yamin8000.cafe.ui.PromptModal"
        android:label="PromptModal"
        tools:layout="@layout/prompt_modal">
        <argument
            android:name="prompt_text"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/crashFragment"
        android:name="io.github.yamin8000.cafe.base.CrashFragment"
        android:label="CrashFragment"
        tools:layout="@layout/fragment_crash">
        <argument
            android:name="stacktrace"
            app:argType="string" />
    </fragment>
    <navigation
        android:id="@+id/account_graph"
        app:startDestination="@id/accountFragment">
        <fragment
            android:id="@+id/newAccountFragment"
            android:name="io.github.yamin8000.cafe.account.NewAccountFragment"
            android:label="NewAccountFragment"
            tools:layout="@layout/new_account_fragment" />
        <fragment
            android:id="@+id/accountFragment"
            android:name="io.github.yamin8000.cafe.account.AccountFragment"
            android:label="AccountFragment"
            tools:layout="@layout/fragment_crud" />
    </navigation>
</navigation>